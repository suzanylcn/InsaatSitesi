@model IEnumerable<InsaatSite.Models.proje>

@{
    ViewBag.Title = "ProjeListele";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<h2>Proje Listele</h2>

<p>
    @Html.ActionLink("Proje Ekle", "ProjeEkle","Panel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kategori)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.aciklama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.resim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kategori)
        </td>
        <td>
            @Html.ActionLink("Düzenle","ProjeGuncelle", new {  id=item.id },new { @class="btn btn-warning btn xs"}) 
          
            @Html.ActionLink("Sil", "ProjeSil", new { id=item.id },new { @class="btn btn-info btn xs"})
        </td>
    </tr>
}

</table>
